{
    "name": "@evva/nest-xs3-api-client",
    "version": "3.0.8",
    "description": "Client implementation for the Xesar 3 MQTT api interface.",
    "private": false,
    "author": "EVVA Sicherheitstechnologie GmbH",
    "license": "EVVA Software License",
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.build.json",
        "lint": "npx eslint src",
        "lint:fix": "npm run lint -- --fix",
        "prettier": "npx prettier \"**/*.{js,ts,jsx,tsx,cjs,cts,mjs,mts,vue,astro,css,scss,json}\" --check",
        "prettier:fix": "npm run prettier -- --write",
        "format": "npm run prettier:fix && npm run lint:fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prepack": "npx nest build"
    },
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist",
        "package.json",
        "README.md",
        "LICENSE"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/evva-sfw/nest-xs3-api-client.git"
    },
    "bugs": {
        "url": "https://github.com/evva-sfw/nest-xs3-api-client/issues"
    },
    "keywords": [
        "nestjs",
        "xs3-api",
        "client"
    ],
    "dependencies": {
        "@evva/nest-mqtt": "^2.0.7",
        "@nestjs/event-emitter": "^3.0.1",
        "mqtt": "^5.15.0"
    },
    "peerDependencies": {
        "@nestjs/common": "^10.0.0 || ^11.0.0",
        "@nestjs/core": "^10.0.0 || ^11.0.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@nestjs/cli": "^11.0.16",
        "@nestjs/schematics": "^11.0.9",
        "@nestjs/testing": "^11.1.13",
        "@release-it/conventional-changelog": "10.0.4",
        "@swc/cli": "^0.7.10",
        "@swc/core": "^1.15.11",
        "@trivago/prettier-plugin-sort-imports": "^6.0.2",
        "@types/express": "^5.0.6",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.2.0",
        "@types/supertest": "^6.0.3",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^17.3.0",
        "jest": "^30.2.0",
        "prettier": "^3.8.1",
        "prettier-eslint": "^16.4.2",
        "reflect-metadata": "^0.2.2",
        "release-it": "19.2.4",
        "rimraf": "^6.1.2",
        "rxjs": "^7.8.2",
        "source-map-support": "^0.5.21",
        "supertest": "^7.2.2",
        "ts-jest": "^29.4.6",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.54.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "modulePathIgnorePatterns": [
            "src/index.ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
